@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgileri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Listesi</div>
					</div>
					<div class="card-body">

						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Telefon 1</th>
									<th scope="col">Telefon 2</th>
									<th scope="col">Email 1</th>                                  
									<th scope="col">Email 2</th>                                  
									<th scope="col">Adres</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ContactId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description.Substring(0,15)</td>
                                        <td>@item.Phone1</td>
                                        <td>@item.Phone2</td>
                                        <td>@item.Email1</td>
                                        <td>@item.Email2</td>
                                        <td>@item.Address</td>
                                        
                                        <td><a href="/Phone/UpdatePhone/@item.ContactId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
							</table>						
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>



