@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolyo</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Portfolyo Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="PortfolioId" />
							<label>Proje Başlığı</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Alt Başlık</label>
							<input type="text" asp-for="SubTitle" class="form-control" />
							<br />
							<label>Proje Görseli</label>
							<textarea rows="3" asp-for="ImageUrl" class="form-control"></textarea>
							<br />
							<label>Proje Linki</label>
							<textarea rows="3" asp-for="Url" class="form-control"></textarea>
							<br />
							<label>Açıklama</label>
							<textarea rows="5" class="form-control" asp-for="Description"></textarea>
							<br />
							<button class="btn btn-warning">Projeyi Güncelle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>


