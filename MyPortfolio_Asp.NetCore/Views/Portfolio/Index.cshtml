@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolyo</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Proje Listesi</div>
					</div>
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Alt Başlık</th>
									<th scope="col">Görsel</th>
									<th scope="col">Link</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.PortfolioId</td>
										<td>@item.Title</td>
										<td>@item.SubTitle</td>
										<td>@item.ImageUrl.Substring(0,10)</td>
										<td>@item.Url.Substring(0,10)</td>
										<td>@item.Description.Substring(0,10)</td>
										<td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni Proje Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

